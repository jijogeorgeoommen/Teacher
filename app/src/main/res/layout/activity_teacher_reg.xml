<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activities.Teacher_reg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="50dp"
             android:textStyle="bold"
             android:textColor="#000"
             android:textSize="30dp"
             android:text="Teacher's Login"
             android:gravity="center"
             android:fontFamily="sans-serif-condensed"
             />
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:orientation="vertical"
             >
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Registeration No.:"
                 android:textSize="25dp"
                 android:textColor="#000"

                 />
             <EditText
                 android:layout_marginTop="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@drawable/plainbutton"
                 android:textColor="#000"
                 android:textAlignment="center"
                 android:textSize="20dp"
                 android:id="@+id/teacherregregno"/>

         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:orientation="vertical"
             >
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Name :"
                 android:textSize="25dp"
                 android:textColor="#000"

                 />
             <EditText
                 android:layout_marginTop="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@drawable/plainbutton"
                 android:textColor="#000"
                 android:textAlignment="center"
                 android:textSize="20dp"
                 android:id="@+id/teacherregname"/>

         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:orientation="vertical"
             >
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Branch :"
                 android:textSize="25dp"
                 android:textColor="#000"

                 />
             <EditText
                 android:layout_marginTop="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@drawable/plainbutton"
                 android:textColor="#000"
                 android:textAlignment="center"
                 android:textSize="20dp"
                 android:id="@+id/teacherregbranch"/>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="20dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:orientation="vertical"
                 >
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Password :"
                     android:textSize="25dp"
                     android:textColor="#000"

                     />
                 <EditText
                     android:layout_marginTop="10dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="@drawable/plainbutton"
                     android:textColor="#000"
                     android:textAlignment="center"
                     android:textSize="20dp"
                     android:id="@+id/teacherregpass"/>

             </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="20dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:orientation="vertical"
                 >
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Designation:"
                     android:textSize="25dp"
                     android:textColor="#000"

                     />
                 <EditText
                     android:layout_marginTop="10dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="@drawable/plainbutton"
                     android:textColor="#000"
                     android:textAlignment="center"
                     android:textSize="20dp"
                     android:id="@+id/teacherregdesig"/>

             </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="20dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:orientation="vertical"
                 >
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Phone No. :"
                     android:textSize="25dp"
                     android:textColor="#000"

                     />
                 <EditText
                     android:layout_marginTop="10dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="@drawable/plainbutton"
                     android:textColor="#000"
                     android:textSize="20dp"
                     android:textAlignment="center"
                     android:id="@+id/teacherregphn"/>

             </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="20dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:orientation="vertical"
                 >
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Email :"
                     android:textSize="25dp"
                     android:textColor="#000"

                     />
                 <EditText
                     android:layout_marginTop="10dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="@drawable/plainbutton"
                     android:textColor="#000"
                     android:textAlignment="center"
                     android:textSize="20dp"
                     android:id="@+id/teacherregemail"/>

             </LinearLayout>

         </LinearLayout>

         <Button
             android:id="@+id/submit"
             android:layout_width="300dp"
             android:layout_height="70dp"
             android:textSize="20dp"
             android:textColor="#fff"
             android:background="@drawable/buttondark"
             android:text="Submit"
             android:layout_marginTop="20dp"
             android:layout_gravity="center"
             />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="20dp"></LinearLayout>












     </LinearLayout>







    </ScrollView>

</LinearLayout>